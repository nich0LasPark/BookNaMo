@model Book

<h2>Edit Book</h2>

<div class="card mb-4">
    <div class="card-header card-header-booknamo">
        <h3 class="card-title">Edit Book</h3>
    </div>
    <div class="card-body">
        <form asp-action="Edit" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />

            <div class="row mb-3">
                <div class="col-md-6 mb-3 mb-md-0">
                    <div class="form-group">
                        <label asp-for="Title" class="control-label"></label>
                        <input asp-for="Title" class="form-control w-100" />
                        <span asp-validation-for="Title" class="text-danger"></span>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="Author" class="control-label"></label>
                        <input asp-for="Author" class="form-control w-100" />
                        <span asp-validation-for="Author" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="row mb-3">
                <div class="col-md-6 mb-3 mb-md-0">
                    <div class="form-group">
                        <label asp-for="ISBN" class="control-label"></label>
                        <input asp-for="ISBN" class="form-control w-100" />
                        <span asp-validation-for="ISBN" class="text-danger"></span>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="Genre" class="control-label"></label>
                        <input asp-for="Genre" class="form-control w-100" />
                        <span asp-validation-for="Genre" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="row mb-3">
                <div class="col-md-6 mb-3 mb-md-0">
                    <div class="form-group">
                        <label asp-for="PublicationYear" class="control-label"></label>
                        <input asp-for="PublicationYear" class="form-control w-100" />
                        <span asp-validation-for="PublicationYear" class="text-danger"></span>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="Publisher" class="control-label"></label>
                        <input asp-for="Publisher" class="form-control w-100" />
                        <span asp-validation-for="Publisher" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="row mb-3">
                <div class="col-md-6 mb-3 mb-md-0">
                    <div class="form-group">
                        <label asp-for="TotalCopies" class="control-label"></label>
                        <input asp-for="TotalCopies" class="form-control w-100" />
                        <span asp-validation-for="TotalCopies" class="text-danger"></span>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="AvailableCopies" class="control-label"></label>
                        <input asp-for="AvailableCopies" class="form-control w-100" />
                        <span asp-validation-for="AvailableCopies" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Description" class="control-label"></label>
                <textarea asp-for="Description" class="form-control w-100" rows="4"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div class="d-flex">
                <button type="submit" class="btn btn-primary-booknamo me-2">Save Changes</button>
                <a asp-action="Index" class="btn btn-secondary-booknamo">Back to List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
